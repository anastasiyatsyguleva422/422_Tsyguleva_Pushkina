<Page x:Class="_422_Tsyguleva_Pushkina.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Tsyguleva_Pushkina.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="BtnTab1" Content="Таблица пользователей" Width="180" Height="40" Margin="10" Click="BtnTab1_Click"/>
                <Button x:Name="BtnTab2" Content="Таблица категорий" Width="180" Height="40" Margin="10" Click="BtnTab2_Click"/>
                <Button x:Name="BtnTab3" Content="Таблица платежей" Width="180" Height="40" Margin="10" Click="BtnTab3_Click"/>
            </StackPanel>
            <Button x:Name="BtnTab4" Content="Диаграммы" Width="180" Height="40" HorizontalAlignment="Center" Click="BtnTab4_Click"/>
        </StackPanel>
    </Grid>
</Page>