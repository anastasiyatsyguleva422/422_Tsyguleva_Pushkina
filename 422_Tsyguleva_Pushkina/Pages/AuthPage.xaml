<Page x:Class="_422_Tsyguleva_Pushkina.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage"
      Background="White">

    <Grid Background="White"
          Margin="40"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="labelLogin"
               Content="Логин:"
               Grid.Row="0"
               Grid.Column="0"
               FontSize="14"
               VerticalAlignment="Center"
               Margin="0,10,10,10"/>
        <TextBox x:Name="TextBoxLogin"
                 Grid.Row="0"
                 Grid.Column="1"
                 Height="32"
                 Width="200"
                 Margin="0,10"
                 ToolTip="Введите логин или почту"
                 TextChanged="TextBoxLogin_TextChanged"/>

        <Label x:Name="labelPass"
               Content="Пароль:"
               Grid.Row="1"
               Grid.Column="0"
               FontSize="14"
               VerticalAlignment="Center"
               Margin="0,10,10,10"/>
        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="1"
                     Grid.Column="1"
                     Height="32"
                     Width="200"
                     Margin="0,10"
                     ToolTip="Введите пароль"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    Margin="0,20,0,0">
            <Button x:Name="ButtonEnter"
                    Content="Вход"
                    Width="150"
                    Height="34"
                    Margin="0,5"
                    Click="ButtonEnter_OnClick"/>

            <Button x:Name="ButtonReg"
                    Content="Регистрация"
                    Width="150"
                    Height="34"
                    Margin="0,5"
                    Click="ButtonReg_Click"/>

            <Button x:Name="ButtonChangePassword"
                    Content="Смена пароля"
                    Width="150"
                    Height="34"
                    Margin="0,5"
                    Click="ButtonChangePassword_Click"/>

            <Button x:Name="submitCaptcha"
                    Content="Подтвердить"
                    Width="150"
                    Height="34"
                    Margin="0,5"
                    Visibility="Hidden"
                    Click="submitCaptcha_Click"/>
        </StackPanel>

        <TextBox x:Name="captcha"
                 Grid.Row="3"
                 Grid.Column="1"
                 Visibility="Hidden"
                 Height="40"
                 FontSize="20"
                 FontWeight="Bold"
                 Foreground="Red"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 IsReadOnly="True"
                 Margin="0,20,0,0"
                 Text="CAPTCHA"/>
        <TextBox x:Name="captchaInput"
                 Grid.Row="4"
                 Grid.Column="1"
                 Visibility="Hidden"
                 Height="32"
                 Margin="0,10,0,0"
                 ToolTip="Введите текст с картинки"/>
    </Grid>
</Page>